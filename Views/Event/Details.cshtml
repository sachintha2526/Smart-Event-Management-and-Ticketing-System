@model SmartEventSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">@Model.Name</h1>
            <h4 class="text-muted">@Model.Category</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Venue</dt>
                <dd class="col-sm-9">@Model.Venue</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.EventDate.ToLongDateString() @Model.EventDate.ToShortTimeString()</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Availability</dt>
                <dd class="col-sm-9">
                    @if(Model.AvailableSeats > 0)
                    {
                        <span class="text-success">Available (@Model.AvailableSeats seats left)</span>
                    }
                    else
                    {
                        <span class="text-danger">Sold Out</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Actions</h5>
                    @if (Context.Session.GetInt32("MemberId") != null)
                    {
                        @if (Model.AvailableSeats > 0)
                        {
                            <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-success w-100 mb-2">Book Tickets</a>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100 mb-2" disabled>Sold Out</button>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Please <a asp-controller="Account" asp-action="Login">login</a> to book tickets.
                        </div>
                    }
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                </div>
            </div>
            
            <!-- Placeholder for Reviews -->
            <div class="mt-4">
                <h5>Reviews</h5>
                <p class="text-muted"><small>Reviews will appear here.</small></p>
                @if (Context.Session.GetInt32("MemberId") != null)
                {
                     <a asp-controller="Review" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-sm btn-outline-info">Write a Review</a>
                }
            </div>
        </div>
    </div>
</div>
