@model SmartEventSystem.Models.Booking

@{
    ViewData["Title"] = "Book Tickets";
}

<div class="container mt-5">
    <h2>Book Tickets for @ViewBag.EventName</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EventId" />

                <div class="mb-3">
                    <label class="form-label">Base Price</label>
                    <input type="text" class="form-control" value="@ViewBag.Price.ToString("C")" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="SeatType" class="form-label"></label>
                    <select asp-for="SeatType" class="form-select">
                        <option value="Regular">Regular</option>
                        <option value="VIP">VIP (+50%)</option>
                        <option value="Economy">Economy (-20%)</option>
                    </select>
                    <span asp-validation-for="SeatType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" min="1" max="10" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Confirm Booking</button>
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
